{
  "name": "yaml-tickets-to-issues",
  "version": "1.0.0",
  "description": "GitHub Action to sync YAML ticket files with GitHub Issues",
  "type": "module",
  "main": "dist/index.js",
  "scripts": {
    "build": "ncc build src/main.ts -o dist --source-map --license licenses.txt",
    "format": "prettier --write \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.yml\"",
    "format:check": "prettier --check \"**/*.ts\" \"**/*.js\" \"**/*.json\" \"**/*.yml\"",
    "lint": "eslint . --ext .ts,.js",
    "test": "./scripts/test.sh",
    "semantic-release": "semantic-release",
    "commit": "git-cz",
    "prepare": "husky install"
  },
  "release": {
    "branches": [
      "main",
      "master"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/changelog",
        {
          "changelogFile": "CHANGELOG.md"
        }
      ],
      [
        "@semantic-release/git",
        {
          "assets": [
            "package.json",
            "CHANGELOG.md"
          ],
          "message": "chore(release): ${nextRelease.version} [skip ci]\n\n${nextRelease.notes}"
        }
      ],
      [
        "@semantic-release/github",
        {
          "assets": [
            "dist/*.js",
            "dist/*.js.map"
          ]
        }
      ]
    ]
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dodwmd/yaml-tickets-to-issues.git"
  },
  "keywords": [
    "github-actions",
    "yaml",
    "issues",
    "tickets"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@octokit/rest": "^21.1.1",
    "glob": "^8.1.0",
    "js-yaml": "4.1.0"
  },
  "eslintConfig": {
    "extends": "./.eslintrc.json"
  },
  "devDependencies": {
    "@actions/core": "^1.11.1",
    "@actions/github": "^6.0.1",
    "@commitlint/cli": "^19.8.1",
    "@commitlint/config-conventional": "^19.8.1",
    "@eslint/js": "^9.27.0",
    "@semantic-release/changelog": "^6.0.3",
    "@semantic-release/git": "^10.0.1",
    "@types/glob": "^8.0.0",
    "@types/jest": "^29.5.0",
    "@types/js-yaml": "^4.0.5",
    "@types/jsonschema": "^0.0.5",
    "@types/node": "^20.17.47",
    "@typescript-eslint/eslint-plugin": "^6.0.0",
    "@typescript-eslint/parser": "^6.0.0",
    "@vercel/ncc": "^0.36.1",
    "commitizen": "^4.3.0",
    "cz-conventional-changelog": "^3.3.0",
    "eslint": "^8.57.1",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-github": "^6.0.0",
    "eslint-plugin-jest": "^27.0.0",
    "globals": "^16.1.0",
    "husky": "^8.0.3",
    "jest": "^29.5.0",
    "jest-circus": "^29.5.0",
    "jsonschema": "^1.5.0",
    "prettier": "^3.0.0",
    "semantic-release": "^22.0.0",
    "ts-jest": "^29.1.0",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.32.1",
    "yaml-lint": "^1.7.0"
  }
}
